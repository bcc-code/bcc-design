{
  "name": "@bcc-code/component-library",
  "version": "0.1.0",
  "type": "module",
  "description": "Extended Vue component library based on PrimeVue and BCC design tokens",
  "repository": "https://github.com/bcc-code/bcc-design.git",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9.15.0",
  "files": [
    "dist",
    "dist-types",
    "dist-css"
  ],
  "main": "./dist/component-library.umd.cjs",
  "module": "./dist/component-library.js",
  "types": "./dist-types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist-types/index.d.ts",
        "default": "./dist/component-library.js"
      },
      "require": {
        "types": "./dist-types/index.d.ts",
        "default": "./dist/component-library.umd.cjs"
      }
    },
    "./style.css": "./dist/style.css",
    "./tailwind.css": "./dist-css/tailwind.css"
  },
  "scripts": {
    "dev": "histoire dev --port 6006",
    "dev:vite": "vite",
    "build": "run-p typecheck build:types build:vite build:css",
    "build:vite": "rimraf dist && vite build",
    "build:types": "rimraf dist-types && vue-tsc -p tsconfig.build.json",
    "build:css": "node scripts/build-tailwind.mjs",
    "generate:context-modes": "node scripts/generate-context-modes.mjs",
    "generate:context-css": "node scripts/generate-context-css.mjs",
    "typecheck": "vue-tsc --noEmit",
    "story:dev": "histoire dev --port 6006",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "lint": "eslint . --ext .vue,.ts,.tsx"
  },
  "dependencies": {
    "@bcc-code/design-tokens": "^5.0.0",
    "@bcc-code/icons-vue": "^1.4.0",
    "primevue": "^4.5.4",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "1.0.0-beta.1",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "histoire": "1.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.7.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  }
}
