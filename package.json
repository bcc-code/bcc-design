{
  "name": "@bcc-code/vue-components",
  "repository": "https://github.com/bcc-code/bcc-vue-components.git",
  "homepage": "https://developer.bcc.no/bcc-design/vue-components/",
  "version": "0.7.3",
  "type": "module",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "dist_types"
  ],
  "main": "./dist/vue-components.umd.js",
  "module": "./dist/vue-components.js",
  "types": "./dist_types/index.d.ts",
  "exports": {
    "import": "./dist/vue-components.js",
    "require": "./dist/vue-components.umd.js"
  },
  "scripts": {
    "start": "npm run storybook",
    "build": "run-p type-check build-types build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:update-snapshots": "npm run test:unit -- -u",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "build-types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.compile.json",
    "lint": "npm run lint:no-fix -- --fix",
    "lint:no-fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "storybook": "start-storybook -p 6006 --no-open",
    "build-storybook": "build-storybook",
    "create-component": "./scripts/create-component.sh"
  },
  "dependencies": {
    "@bcc-code/design-tokens": "^0.3.0"
  },
  "peerDependencies": {
    "tailwindcss": "^3.2.4",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@bcc-code/icons-vue": "^0.3.0",
    "@headlessui/vue": "^1.7.12",
    "@rushstack/eslint-patch": "^1.1.4",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-vite": "^0.3.0",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/vue3": "^6.5.16",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/core": "^9.13.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "class-variance-authority": "^0.4.0",
    "eslint": "^8.22.0",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-vue": "^9.3.0",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "tailwind-merge": "^1.10.0",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6",
    "vue": "^3.2.45",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^1.0.12"
  }
}
