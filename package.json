{
  "name": "@bcc-code/vue-components",
  "repository": "https://github.com/bcc-code/bcc-vue-components.git",
  "homepage": "https://developer.bcc.no/bcc-design/vue-components/",
  "version": "0.9.1",
  "type": "module",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "dist_types"
  ],
  "main": "./dist/vue-components.umd.js",
  "module": "./dist/vue-components.js",
  "types": "./dist_types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist_types/index.d.ts",
        "default": "./dist/vue-components.js"
      },
      "require": {
        "types": "./dist_types/index.d.ts",
        "default": "./dist/vue-components.umd.js"
      }
    },
    "./style.css": {
      "import": "./dist/style.css"
    },
    "./tailwind/index.css": {
      "import": "./dist_css/index.css"
    }
  },
  "scripts": {
    "start": "npm run storybook",
    "build": "run-p type-check build-types build-only build-css",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:unit:update-snapshots": "npm run test:unit -- -u",
    "build-only": "vite build",
    "build-css": "copyfiles --flat ./src/css/*.css dist_css",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "build-types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.compile.json",
    "lint": "npm run lint:no-fix -- --fix",
    "lint:no-fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "create-component": "node ./scripts/create-component.js"
  },
  "dependencies": {
    "@bcc-code/design-tokens": "^0.5.0"
  },
  "peerDependencies": {
    "tailwindcss": "^3.2.4",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@bcc-code/icons-vue": "^0.3.0",
    "@headlessui/vue": "^1.7.12",
    "@rushstack/eslint-patch": "^1.1.4",
    "@storybook/addon-actions": "^7.0.6",
    "@storybook/addon-essentials": "^7.0.6",
    "@storybook/addon-interactions": "^7.0.6",
    "@storybook/addon-links": "^7.0.6",
    "@storybook/addon-mdx-gfm": "^7.0.6",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/vue3": "^7.0.6",
    "@storybook/vue3-vite": "^7.0.6",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/core": "^9.13.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.22.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-vue": "^9.3.0",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.6",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6",
    "vue": "^3.2.45",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^1.0.12"
  }
}
