{
  "name": "@bcc-code/design-components",
  "repository": "https://github.com/bcc-code/bcc-vue-components.git",
  "homepage": "https://developer.bcc.no/bcc-design/components/",
  "version": "0.12.1",
  "type": "module",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "dist_types",
    "dist_css"
  ],
  "main": "./dist/design-components.umd.js",
  "module": "./dist/design-components.js",
  "types": "./dist_types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/css-package/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/css-package/index.d.ts",
        "default": "./dist/index.umd.js"
      }
    },
    "./style.css": {
      "import": "./dist/style.css"
    },
    "./tailwind/index.css": {
      "import": "./dist_css/tailwind/index.css"
    }
  },
  "scripts": {
    "build": "run-p build:vite build:types build:css",
    "build:vite": "vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly -p tsconfig.json",
    "build:css": "copyfiles --flat ../src/css/*.css dist_css/tailwind"
  },
  "peerDependencies": {
    "tailwindcss": "^3.2.4"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "vite": "^4.3.8"
  }
}
